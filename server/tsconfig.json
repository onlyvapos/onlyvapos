{
  "compilerOptions": {
    "target": "es2020",                                
    "module": "commonjs",                               
    "outDir": "./build",                              
    "rootDir": "./src",                               
    "strict": true,                                   
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true,                             
    "sourceMap": true                                  
  },
  "include": ["src/**/*.ts"],                           
  "exclude": ["node_modules", "build"]                 
}
